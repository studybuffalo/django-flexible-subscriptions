# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.py]
line_length = 80
multi_line_output = 3

[*.{html,css,scss,json,yml,js}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

